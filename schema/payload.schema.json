{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "projectType": {
          "type": "string",
          "description": "The type of the target project",
          "enum": ["azd", "teams"]
      },
      "resources": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "azureappservice", 
                "azureapplicationinsights", 
                "azurebotservice", 
                "azurecontainerapp", 
                "azurecosmosdb", 
                "azurefunctions", 
                "azurekeyvault", 
                "azuremysqldatabase", 
                "azuredatabaseforpostgresql", 
                "azurecacheforredis", 
                "azuresqldatabase",
                "azurestorageaccount",
                "azurestaticwebapp",
                "azureservicebus"
              ],
              "description": "The resource type"
            },
            "instances": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": []
              },
              "description": "The resource instances"
            }
          },
          "required": ["type"]
        }
      },
      "bindings": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "source": {
              "type": "string",
              "description": "The binding source resource. With the form `${resourceType}` or `${resourceType.resourceName}`"
            },
            "target": {
              "type": "string",
              "description": "The binding target resource. With the form `${resourceType}` or `${resourceType.resourceName}`"
            },
            "connection": {
              "type": "string",
              "enum": ["secret", "http", "system-identity", "bot-connection"],
              "description": "The binding connection type"
            },
            "store":{
                "type": "string",
                "description": "The binding store resource. With the form `${resourceType}` or `${resourceType.resourceName}`",
                "enum": ["keyvault"]
            },
            "key": {
              "type": "string",
              "description": "The binding customization key"
            }
          },
          "required": ["source", "target"]
        }
      },
      "services": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string",
              "description": "The compute resource that will host the service. With the form `${resourceType}` or `${resourceType.resourceName}`"
            },
            "language": {
              "type": "string",
              "enum": ["node", "python", "dotnet", "java", "go"],
              "description": "The service language"
            },
            "project": {
              "type": "string",
              "description": "The project path"
            }
          },
          "required": ["host", "language", "project"]
        }
      }
    },
    "required": ["resources"]
  }