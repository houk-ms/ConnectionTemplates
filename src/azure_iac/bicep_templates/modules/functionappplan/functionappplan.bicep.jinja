// The bicep template to create an app service plan

param name string = 'plan-${uniqueString(resourceGroup().id)}'
param location string = resourceGroup().location
param sku string = 'B1'
param tier string = 'Dynamic'


resource functionAppPlan 'Microsoft.Web/serverfarms@2022-09-01' = {
	name: name
	location: location
	sku: {
		name: sku
		tier: tier
	}
	properties: {
	}
}


output id string = functionAppPlan.id
output name string = functionAppPlan.name