# Create an Azure Bot Service with Microsoft Teams channel 

resource "azurerm_bot_channels_registration" "{{engine.module_name}}" {
	name				=	"{{engine.module_params_name}}"
	resource_group_name	=	azurerm_resource_group.rg.name
	location			=	"global"
	microsoft_app_id	=	"{{engine.module_params_microsoft_app_id}}"
	sku					=	"F0"

	endpoint			=	"{{engine.module_params_endpoint}}"	
}

resource "azurerm_bot_channel_ms_teams" "example" {
	bot_name			=	azurerm_bot_channels_registration.{{engine.module_name}}.name
	location			=	azurerm_bot_channels_registration.{{engine.module_name}}.location
	resource_group_name	=	azurerm_resource_group.rg.name
}