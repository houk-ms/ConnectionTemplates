{
	"resources": [
	  {
		"type": "azureappservice",
		"instances": [
		  {
			"name": "app1"
		  },
		  {
			"name": "app2"
		  }
		]
	  },
	  {
		"type": "azureopenai",
		"instances":[
			{
				"name": "ai1"
			},
			{
				"name": "ai2"
			}
		]
	  },
	  {
		"type": "azurekeyvault",
		"instances": [
		  {
			"name": "kv1"
		  }
		]
	  }
	],
	"bindings": [
		{
			"source": "${azureappservice.app1}",
			"target": "${azureopenai.ai1}",
			"connection": "secret",
			"customKeys": {
				"AZURE_OPENAI_BASE": "testbase",
				"AZURE_OPENAI_KEY": "testkey"
			},
			"store": "${azurekeyvault.kv1}"
		},
		{
			"source":"${azureappservice.app2}",
			"target":"${azureopenai.ai2}"
		}
		
	],
	"services": [
		{
		  "host": "${azureappservice.app1}",
		  "language": "dotnet",
		  "project": "."
		},
		{
			"host": "${azureappservice.app2}",
			"language": "python",
			"project": "."
		}
	  ]
}
  